{
  "compilerOptions": {
    "target": "ES2020",               // ou ES2017+, tem que ser 2017 ou mais
    "module": "CommonJS",             // CommonJS continua
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"]
}
